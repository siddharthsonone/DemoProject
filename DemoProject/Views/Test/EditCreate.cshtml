@model DemoProject.Models.Test

@{
    ViewData["Title"] = @Model.Id != 0 ? "Edit" : "Create";
}
<br />
<h2 class="text-info"> @(Model.Id!=0 ? "Edit" : "Create")Test </h2>
<br />

<div class="border container" style="padding:30px;">
    <form asp-action="EditCreate" method="post">
        <! –– IT IS MANDATORY TO HAVE THIS FEILD BECAUSE OF BINDING ––>

        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }


        <div class="text-danger" asp-validation-summary="ModelOnly"></div>


        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Feature"></label>
            </div>
            <div class="col-6">
                <input asp-for="Feature" class="form-control" />
            </div>
            <span asp-validation-for="Feature" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="TestCase"></label>
            </div>
            <div class="col-6">
                <input asp-for="TestCase" class="form-control" />
            </div>
            <span asp-validation-for="TestCase" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Expected"></label>
            </div>
            <div class="col-6">
                <input asp-for="Expected" class="form-control" />
            </div>
            <span asp-validation-for="Expected" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Observed"></label>
            </div>
            <div class="col-6">
                <input asp-for="Observed" class="form-control" />
            </div>
            <span asp-validation-for="Observed" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Result"></label>
            </div>
            <div class="col-6">
                <input asp-for="Result" class="form-control" />
            </div>
            <span asp-validation-for="Result" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="LastExecuted"></label>
            </div>
            <div class="col-6">
                <input asp-for="LastExecuted" class="form-control" />
            </div>
            <span asp-validation-for="LastExecuted" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Notes"></label>
            </div>
            <div class="col-6">
                <input asp-for="Notes" class="form-control" />
            </div>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>

    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
} 