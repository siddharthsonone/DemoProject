@page
@model DemoProject.Pages.BookList.DeletePageModel
@{
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-info"> Delete Book</h2>
<br />

<div class="border container" style="padding:40px;">
    <form method="post">
        <! –– IT IS MANDATORY TO HAVE THIS FEILD BECAUSE OF BINDING ––>
        <input type="hidden" asp-for="Book.Key" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-4">
                <p>@Model.Book.Name</p>
            </div>

        </div>

        <! ––  ––>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-4">
                <p>@Model.Book.Author</p>
            </div>

        </div>

        <! ––  ––>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-4">
                <p>@Model.Book.ISBN</p>
            </div>

        </div>

        <! ––  ––>
        <div class="form-group row">
            <div class="col-2 ">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div class="col-4 ">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>

    </form>
</div>
