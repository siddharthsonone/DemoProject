@page
@model DemoProject.Pages.BookList.IndexModel;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    ViewData["Title"] = "Books";
}
<br />
<div class="container row p-0 m-0">
    <div class="col-10">
        <h2 class="text-info"> Book List</h2>
    </div>
    <div class="col-2">
        <a asp-page="CreatePage" class="btn btn-info form-control">Create Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post"></form>
        @if (Model.Books.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        <label asp-for="Books.FirstOrDefault().Name">Name</label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().Author">Author</label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().ISBN">ISBN</label>
                    </th>
                    <th>

                    </th>
                </tr>

                @foreach (var item in Model.Books)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(m => item.Author)
                        </td>

                        <td>
                            @Html.DisplayFor(m => item.ISBN)
                        </td>

                        <td>
                            <button asp-page-handler="Delete" asp-route-id="@item.Key" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                            <a asp-page="EditPage" asp-route-id="@item.Key" class="btn btn-success btn-sm text-white">Edit</a>
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <p>No Books Found!</p>
        }
    </div>

</div>